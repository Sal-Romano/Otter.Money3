{
  "name": "otter-money",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:web\"",
    "dev:web": "npm run dev -w @otter-money/web",
    "dev:api": "npm run dev -w @otter-money/api",
    "build": "npm run build -w @otter-money/shared && npm run build -w @otter-money/api && npm run build -w @otter-money/web",
    "build:web": "npm run build -w @otter-money/web",
    "build:api": "npm run build -w @otter-money/api",
    "lint": "npm run lint --workspaces --if-present",
    "format": "prettier --write \"**/*.{ts,tsx,js,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,json,md}\"",
    "db:migrate": "prisma migrate dev",
    "db:migrate:prod": "prisma migrate deploy",
    "db:generate": "prisma generate",
    "db:studio": "prisma studio",
    "db:seed": "prisma db seed",
    "test": "npm run test --workspaces --if-present",
    "clean": "rm -rf node_modules apps/*/node_modules packages/*/node_modules apps/*/dist packages/*/dist",
    "ios:sync": "./scripts/ios-sync.sh",
    "ios:build": "./scripts/ios-sync.sh --build",
    "ios:open": "./scripts/ios-sync.sh --build --open",
    "ios:live": "./scripts/ios-live-reload.sh start",
    "ios:live:stop": "./scripts/ios-live-reload.sh stop"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "concurrently": "^8.2.2",
    "prettier": "^3.2.4",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "prisma": "^5.8.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  }
}
