# ===========================================
# Otter Money - Production Environment
# ===========================================
# Copy to .env.production and fill in values

# Database
# For external Postgres (your own server):
DATABASE_URL="postgresql://user:password@host.docker.internal:5433/otter_money?schema=public"
# For containerized Postgres (use --profile db):
# DATABASE_URL="postgresql://otter:changeme@postgres:5432/otter_money?schema=public"

# Seed database on first startup (set to "true" once, then set back to "false")
SEED_DB="false"

# JWT Secret (generate: openssl rand -base64 32)
JWT_SECRET="change-this-to-a-random-secret"

# App URL
APP_URL="https://app.otter.money"

# CORS Origin
CORS_ORIGIN="https://app.otter.money"

# Redis (internal docker network)
REDIS_URL="redis://redis:6379"

# Plaid
PLAID_CLIENT_ID=""
PLAID_SECRET=""
PLAID_ENV="production"

# Claude API (for Wally AI)
ANTHROPIC_API_KEY=""

# AWS SES (email)
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_REGION="us-east-1"
EMAIL_FROM="no-reply@otter.money"

# Containerized Postgres settings (only used with --profile db)
POSTGRES_USER="otter"
POSTGRES_PASSWORD="changeme"
POSTGRES_DB="otter_money"
